= form_for @truck do |f|
  -if @truck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@truck.errors.count, "error")} prohibited this truck from being saved:"
      %ul
        - @truck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :location
    = f.text_field :location
  .actions
    = f.submit 'Save'
